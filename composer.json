{
	"name": "krzysztofrewak/brewmap",
	"description": "Brewmap static pseudo-API builder",
	"type": "project",
	"authors": [
		{
			"name": "Krzysztof Rewak",
			"email": "krzysztof.rewak@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Brewmap\\": "backend/"
		}
	},
	"require": {
		"php": "^7.4",
		"ext-json": "*",
		"illuminate/support": "^8.11.2",
		"guzzlehttp/guzzle": "^7.2.0",
		"vlucas/phpdotenv": "^5.2.0"
	},
	"scripts": {
		"build": [
			"composer install",
			"rm -rf ./public/api",
			"sh -c 'cd backend && php index.php'"
		],
		"ecs": "./vendor/bin/ecs check"
	},
	"require-dev": {
		"symplify/easy-coding-standard": "^8.3",
		"krzysztofrewak/php-cs-double-quote-fixer": "^1.0"
	}
}
